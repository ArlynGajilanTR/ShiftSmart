{
  "name": "shiftsmart-api",
  "version": "1.6.0",
  "private": true,
  "description": "Unified fullstack application for Reuters Breaking News shift scheduling",
  "author": "Reuters Breaking News Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArlynGajilanTR/ShiftSmart.git"
  },
  "keywords": [
    "shift-scheduling",
    "reuters",
    "breaking-news",
    "api",
    "supabase",
    "ai-scheduling"
  ],
  "scripts": {
    "dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 next dev",
    "dev:safe": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "check:ai": "node scripts/check-ai-config.js",
    "test": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:headed": "playwright test --config=tests/e2e/playwright.config.ts --headed",
    "test:debug": "playwright test --config=tests/e2e/playwright.config.ts --debug",
    "test:ui": "playwright test --config=tests/e2e/playwright.config.ts --ui",
    "test:report": "playwright show-report",
    "test:unit": "jest --config=jest.config.js",
    "test:unit:watch": "jest --config=jest.config.js --watch",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "test:api": "cd tests && bash test-api-endpoints.sh",
    "test:api:enhanced": "cd tests/api-enhanced && bash enhanced-api-tests.sh",
    "test:api:vitest": "vitest run tests/api/",
    "test:database": "jest --config=jest.config.js --testPathPattern=tests/database",
    "test:a11y": "playwright test --config=tests/e2e/playwright.config.ts --grep=accessibility",
    "test:performance": "node tests/performance/schedule-generation-bench.ts",
    "test:performance:regression": "jest --config=tests/performance/jest.config.js",
    "test:integration": "jest --config=tests/integration/jest.config.js",
    "test:live-ai": "jest --config=tests/e2e/jest.config.js --testPathPattern=ai-schedule-generation",
    "test:all": "npm run test:unit && npm run test:api && npm run test && npm run test:a11y",
    "mock:server": "node tests/integration/mock-claude-server.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@hookform/resolvers": "^3.6.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-radio-group": "^1.2.1",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@supabase/ssr": "^0.5.1",
    "@supabase/supabase-js": "^2.45.4",
    "@tailwindcss/postcss": "^4.0.0",
    "@tanstack/react-table": "^8.20.5",
    "@vercel/analytics": "^1.1.1",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "csv-parse": "^6.1.0",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.414.0",
    "next": "^15.5.7",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.0",
    "recharts": "^2.13.3",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.45.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "15.0.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.21.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": "22.x"
  }
}
