{
  "name": "shiftsmart-api",
  "version": "1.3.0",
  "private": true,
  "description": "Unified fullstack application for Reuters Breaking News shift scheduling",
  "author": "Reuters Breaking News Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArlynGajilanTR/ShiftSmart.git"
  },
  "keywords": [
    "shift-scheduling",
    "reuters",
    "breaking-news",
    "api",
    "supabase",
    "ai-scheduling"
  ],
  "scripts": {
    "dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 next dev",
    "dev:safe": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "check:ai": "node scripts/check-ai-config.js",
    "test": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:headed": "playwright test --config=tests/e2e/playwright.config.ts --headed",
    "test:debug": "playwright test --config=tests/e2e/playwright.config.ts --debug",
    "test:ui": "playwright test --config=tests/e2e/playwright.config.ts --ui",
    "test:report": "playwright show-report",
    "test:unit": "jest --config=jest.config.js",
    "test:unit:watch": "jest --config=jest.config.js --watch",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "test:api": "cd tests && bash test-api-endpoints.sh",
    "test:api:enhanced": "cd tests/api-enhanced && bash enhanced-api-tests.sh",
    "test:database": "jest --config=jest.config.js --testPathPattern=tests/database",
    "test:a11y": "playwright test --config=tests/e2e/playwright.config.ts --grep=accessibility",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:all": "npm run test:unit && npm run test:api && npm run test && npm run test:a11y"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@dnd-kit/core": "latest",
    "@dnd-kit/sortable": "latest",
    "@dnd-kit/utilities": "latest",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-avatar": "latest",
    "@radix-ui/react-checkbox": "1.1.3",
    "@radix-ui/react-dialog": "latest",
    "@radix-ui/react-label": "latest",
    "@radix-ui/react-select": "latest",
    "@radix-ui/react-separator": "latest",
    "@radix-ui/react-slot": "latest",
    "@radix-ui/react-tabs": "latest",
    "@radix-ui/react-toast": "1.2.4",
    "@radix-ui/react-tooltip": "latest",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.77.0",
    "@vercel/analytics": "latest",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.454.0",
    "next": "16.0.1",
    "next-themes": "latest",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.60.0",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "postcss": "^8.5",
    "tailwindcss": "^4.1.9",
    "ts-jest": "^29.1.1",
    "typescript": "^5"
  }
}
